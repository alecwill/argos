# Pet Persona AI Configuration
# Copy this file to .env and fill in your values

# YouTube Data API Key (required for YouTube ingestion)
# Get one at: https://console.cloud.google.com/apis/credentials
YOUTUBE_API_KEY=your_youtube_api_key_here

# Optional: OpenAI API Key (for future LLM-based response generation)
# OPENAI_API_KEY=your_openai_api_key_here

# Database path (defaults to data/pet_persona.db)
DATABASE_URL=sqlite:///data/pet_persona.db

# Embedding model (sentence-transformers model name)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Rate limiting configuration
WIKIPEDIA_RATE_LIMIT_REQUESTS=50
WIKIPEDIA_RATE_LIMIT_PERIOD=60
YOUTUBE_RATE_LIMIT_REQUESTS=100
YOUTUBE_RATE_LIMIT_PERIOD=60

# Cache settings
CACHE_ENABLED=true
CACHE_TTL_HOURS=24

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Voice settings (optional)
STT_PROVIDER=faster_whisper
TTS_PROVIDER=pyttsx3
AUDIO_SAMPLE_RATE=16000
AUDIO_LANGUAGE=en
